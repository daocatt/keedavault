{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "KeedaVault",
  "mainBinaryName": "KeedaVault",
  "version": "0.1.0",
  "identifier": "com.keedavault.app",
  "plugins": {},
  "app": {
    "withGlobalTauri": true,
    "security": {
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:default",
            "core:window:allow-create",
            "core:window:allow-close",
            "core:window:allow-set-focus",
            "core:window:allow-show",
            "core:window:allow-start-dragging",
            "core:webview:allow-create-webview-window",
            "core:window:allow-set-resizable",
            "core:window:allow-set-size",
            "core:window:allow-set-min-size",
            "core:window:allow-set-max-size",
            "core:window:allow-set-maximizable",
            "core:window:allow-set-minimizable",
            "core:window:allow-inner-size",
            "core:window:allow-scale-factor",
            "core:window:allow-center",
            "core:window:allow-maximize",
            "core:window:allow-minimize",
            "core:window:allow-hide",
            "core:window:allow-set-position",
            "dialog:default",
            "core:window:allow-set-title",
            "fs:default",
            "store:default",
            "shell:default",
            {
              "identifier": "fs:allow-read-file",
              "allow": [
                {
                  "path": "$HOME/**"
                },
                {
                  "path": "$DESKTOP/**"
                },
                {
                  "path": "$DOCUMENT/**"
                },
                {
                  "path": "$DOWNLOAD/**"
                },
                {
                  "path": "$APPDATA/**"
                },
                {
                  "path": "$LOCALDATA/**"
                }
              ]
            },
            {
              "identifier": "fs:allow-exists",
              "allow": [
                {
                  "path": "$HOME/**"
                },
                {
                  "path": "$DESKTOP/**"
                },
                {
                  "path": "$DOCUMENT/**"
                },
                {
                  "path": "$DOWNLOAD/**"
                },
                {
                  "path": "$APPDATA/**"
                },
                {
                  "path": "$LOCALDATA/**"
                }
              ]
            },
            {
              "identifier": "fs:allow-write-file",
              "allow": [
                {
                  "path": "$HOME/**"
                },
                {
                  "path": "$DESKTOP/**"
                },
                {
                  "path": "$DOCUMENT/**"
                },
                {
                  "path": "$DOWNLOAD/**"
                },
                {
                  "path": "$APPDATA/**"
                },
                {
                  "path": "$LOCALDATA/**"
                }
              ]
            }
          ]
        },
        "default"
      ],
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://aistudiocdn.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src ipc: http://ipc.localhost 'self' https://generativelanguage.googleapis.com https://aistudiocdn.com data: blob:; img-src 'self' data: https: blob:;"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "KeedaVault",
        "width": 700,
        "height": 580,
        "minWidth": 700,
        "minHeight": 450,
        "center": true,
        "visible": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": false,
        "useHttpsScheme": true,
        "backgroundColor": "#ffffff"
      }
    ]
  }
}