<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for Touch ID / Face ID authentication -->
    <key>com.apple.security.device.usb</key>
    <true/>
    
    <!-- Allow keychain access for storing passwords -->
    <key>keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.keedavault.app</string>
    </array>
    
    <!-- Network access (if needed for future features) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Disable App Sandbox for full file system access -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Allow reading and writing files chosen by the user -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <false/>
</dict>
</plist>
